<?xml version="1.0" encoding="utf-8"?>
<com.kingcheergame.customview.view2_2.practice.Practice03AtMostLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2B2B"
    android:gravity="center">

    <Button
        android:id="@+id/practice_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Hide Center Button" />

    <Button
        android:id="@+id/practice_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Center Button" />

    <com.kingcheergame.customview.view2_2.practice.Practice03AtMostView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp" />

</com.kingcheergame.customview.view2_2.practice.Practice03AtMostLinearLayout>